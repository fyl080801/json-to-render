{
  "datasource": {
    "remotedata": {
      "type": "request",
      "props": { "url": "", "method": "GET", "params": {} }
    },
    "raws": {
      "type": "rawdata",
      "props": {
        "xxx": "123",
        "yyy": { "$type": "bind", "$source": "text1" }
      }
    }
  },
  "fields": [
    {
      "component": "p",
      "condition": { "$type": "bind", "$source": "obj.selected" },
      "text": { "$type": "bind", "$source": "text1" }
    },
    {
      "component": "div",
      "children": [
        {
          "component": "el-form",
          "props": {
            "labelWidth": "120px"
          },
          "children": [
            {
              "component": "el-form-item",
              "props": { "label": "input1" },
              "children": [
                {
                  "component": "el-input",
                  "props": {
                    "modelValue": { "$type": "bind", "$source": "text1" },
                    "onUpdate:modelValue": {
                      "$type": "on",
                      "$model": "text1",
                      "$result": "arguments[0]"
                    }
                  }
                },
                {
                  "component": "p",
                  "props": {
                    "class": { "$type": "bind", "$source": "text1" }
                  },
                  "text": "=:text1"
                }
              ]
            },
            {
              "component": "el-form-item",
              "props": { "label": "select1" },
              "children": [
                {
                  "component": "el-select",
                  "props": {
                    "modelValue": {
                      "$type": "bind",
                      "$source": "obj.selected"
                    },
                    "onUpdate:modelValue": {
                      "$type": "on",
                      "$model": "obj.selected",
                      "$result": "arguments[0]"
                    }
                  },
                  "children": [
                    {
                      "component": "el-option",
                      "props": { "value": 0, "label": "选项1" }
                    },
                    {
                      "component": "el-option",
                      "props": { "value": 1, "label": "选项2" }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "el-button",
          "text": "click1",
          "props": {
            "type": "primary",
            "onClick": { "$type": "on", "$result": "alert(\"aaa\")" }
          }
        },
        {
          "component": "p",
          "text": { "$type": "bind", "$source": "raws.xxx" }
        },
        {
          "component": "p",
          "text": {
            "$type": "bind",
            "$source": "`绑定得到的数据： ${raws.yyy}`"
          }
        }
      ]
    },
    {
      "component": "el-table",
      "props": {
        "data": [
          { "col1": "aaa", "col2": "bbb" },
          { "col1": "ccc", "col2": "ddd" }
        ]
      },
      "children": [
        {
          "component": "el-table-column",
          "props": { "label": "col1", "prop": "col1" }
        },
        {
          "component": "el-table-column",
          "props": { "label": "col2", "prop": "col2" }
        },
        {
          "component": "el-table-column",
          "children": [
            {
              "component": "el-button",
              "text": "明细",
              "props": {
                "type": "text",
                "onClick": {
                  "$type": "on",
                  "$result": "alert(JSON.stringify(scope.row))"
                }
              }
            },
            {
              "component": "el-button",
              "text": { "$type": "bind", "$source": "scope.row.col1" },
              "props": { "type": "text" }
            }
          ]
        }
      ]
    }
  ]
}
