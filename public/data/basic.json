{
  "datasource": {
    "remotedata": {
      "type": "fetch",
      "url": "/data/listdata.json",
      "auto": false,
      "props": { "method": "GET", "params": {} }
    },
    "raws": {
      "type": "rawdata",
      "props": {
        "xxx": "123",
        "yyy": { "$type": "computed", "$result": "model.text1" }
      }
    }
  },
  "fields": [
    {
      "component": "p",
      "condition": { "$type": "computed", "$result": "model.obj.selected" },
      "text": { "$type": "computed", "$result": "model.text1" }
    },
    {
      "component": "div",
      "children": [
        {
          "component": "el-form",
          "props": {
            "labelWidth": "120px"
          },
          "children": [
            {
              "component": "el-form-item",
              "props": { "label": "input1" },
              "children": [
                {
                  "component": "el-input",
                  "props": {
                    "modelValue": {
                      "$type": "computed",
                      "$result": "model.text1"
                    },
                    "onUpdate:modelValue": {
                      "$type": "method",
                      "$model": "model.text1",
                      "$result": "arguments[0]"
                    }
                  }
                },
                {
                  "component": "p",
                  "props": {
                    "class": { "$type": "computed", "$result": "model.text1" }
                  },
                  "text": "=:model.text1"
                }
              ]
            },
            {
              "component": "el-form-item",
              "props": { "label": "input2" },
              "children": [
                {
                  "component": "el-input",
                  "props": {
                    "modelValue": {
                      "$type": "computed",
                      "$result": "model.obj.value"
                    },
                    "onUpdate:modelValue": {
                      "$type": "method",
                      "$model": "model.obj.value",
                      "$result": "arguments[0]"
                    }
                  }
                }
              ]
            },
            {
              "component": "el-form-item",
              "props": { "label": "select1" },
              "children": [
                {
                  "component": "el-select",
                  "props": {
                    "modelValue": {
                      "$type": "computed",
                      "$result": "model.obj.selected"
                    },
                    "onUpdate:modelValue": {
                      "$type": "method",
                      "$model": "model.obj.selected",
                      "$result": "arguments[0]"
                    }
                  },
                  "children": [
                    {
                      "component": "el-option",
                      "props": { "value": 0, "label": "选项1" }
                    },
                    {
                      "component": "el-option",
                      "props": { "value": 1, "label": "选项2" }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "el-button",
          "text": "click1",
          "props": {
            "type": "primary",
            "onClick": { "$type": "method", "$result": "alert(\"aaa\")" }
          }
        },
        {
          "component": "el-button",
          "text": "request",
          "props": {
            "type": "primary",
            "onClick": {
              "$type": "method",
              "$result": "remotedata.request()"
            }
          }
        },
        {
          "component": "p",
          "text": { "$type": "computed", "$result": "raws.xxx" }
        },
        {
          "component": "p",
          "text": {
            "$type": "computed",
            "$result": "`绑定得到的数据： ${raws.yyy}`"
          }
        }
      ]
    },
    {
      "component": "el-table",
      "props": {
        "data": { "$type": "computed", "$result": "remotedata.data" }
      },
      "children": [
        {
          "component": "el-table-column",
          "props": { "label": "col1", "prop": "name" }
        },
        {
          "component": "el-table-column",
          "props": { "label": "col2" },
          "children": [
            {
              "component": "el-input",
              "props": {
                "modelValue": {
                  "$type": "computed",
                  "$result": "scope.row.name"
                },
                "onUpdate:modelValue": {
                  "$type": "method",
                  "$model": "scope.row.name",
                  "$result": "arguments[0]"
                }
              }
            }
          ]
        },
        {
          "component": "el-table-column",
          "children": [
            {
              "component": "el-button",
              "text": "明细",
              "props": {
                "type": "text",
                "onClick": {
                  "$type": "method",
                  "$result": "alert(JSON.stringify(scope.row))"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
