{
  "datasource": {
    "remotedata": {
      "type": "fetch",
      "url": "/data/listdata.json",
      "auto": false,
      "props": { "method": "GET", "params": {} }
    },
    "raws": {
      "type": "rawdata",
      "props": {
        "xxx": "123",
        "yyy": "$:model.text1"
      }
    }
  },
  "fields": [
    {
      "component": "p",
      "condition": "$:model.obj.selected",
      "text": "$:model.text1"
    },
    {
      "component": "div",
      "children": [
        {
          "component": "el-form",
          "props": {
            "labelWidth": "120px"
          },
          "children": [
            {
              "component": "el-form-item",
              "props": { "label": "input1" },
              "children": [
                {
                  "component": "el-input",
                  "model": "model.text1"
                },
                {
                  "component": "p",
                  "text": "$:model.text1"
                }
              ]
            },
            {
              "component": "el-form-item",
              "props": { "label": "input2" },
              "children": [
                {
                  "component": "el-input",
                  "model": "model.obj.value"
                }
              ]
            },
            {
              "component": "el-form-item",
              "props": { "label": "select1" },
              "children": [
                {
                  "component": "el-select",
                  "model": "model.obj.selected",
                  "children": [
                    {
                      "component": "el-option",
                      "props": { "value": 0, "label": "选项1" }
                    },
                    {
                      "component": "el-option",
                      "props": { "value": 1, "label": "选项2" }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "el-button",
          "text": "click1",
          "props": {
            "type": "primary",
            "onClick": "@:alert('aaa')"
          }
        },
        {
          "component": "el-button",
          "text": "request",
          "props": {
            "type": "primary",
            "onClick": "@:remotedata.request()"
          }
        },
        {
          "component": "p",
          "text": "$:raws.xxx"
        },
        {
          "component": "p",
          "text": "#:绑定得到的数据： ${raws.yyy}"
        }
      ]
    },
    {
      "component": "el-table",
      "props": {
        "data": "$:remotedata.data"
      },
      "children": [
        {
          "component": "el-table-column",
          "props": { "label": "col1", "prop": "name" }
        },
        {
          "component": "el-table-column",
          "props": { "label": "col2" },
          "children": [
            {
              "component": "el-input",
              "model": "scope.row.name"
            }
          ]
        },
        {
          "component": "el-table-column",
          "children": [
            {
              "component": "el-button",
              "text": "明细",
              "props": {
                "type": "text",
                "onClick": "@:alert(JSON.stringify(scope.row))"
              }
            }
          ]
        }
      ]
    }
  ]
}
