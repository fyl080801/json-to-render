{
  "datasource": {
    "subform": {
      "type": "fetch",
      "url": "/data/basic/nest.json",
      "auto": false,
      "props": { "method": "GET", "params": {} },
      "defaultData": false
    }
  },
  "listeners": [
    {
      "watch": "$:subform.data",
      "actions": [
        {
          "condition": "$:subform.data",
          "handler": "@model.submodel:subform.data.model"
        }
      ]
    }
  ],
  "fields": [
    { "component": "el-input", "model": "model.text" },
    {
      "component": "el-button",
      "text": "获取定义",
      "props": { "onClick": "@:subform.request()" }
    },
    {
      "component": "p",
      "text": "$:JSON.stringify(model)"
    },
    {
      "component": "div",
      "props": {
        "style": {
          "border": "1px dashed silver",
          "padding": "1.25rem",
          "marginTop": "0.75rem"
        }
      },
      "children": [
        {
          "component": "p",
          "condition": "$:!subform.data",
          "text": "加载远程表单区域",
          "props": { "style": { "textAlign": "center" } }
        },
        {
          "component": "v-jrender",
          "condition": "$:subform.data",
          "props": {
            "modelValue": "$:model.submodel",
            "datasource": "$:subform.data.datasource",
            "listeners": "$:subform.data.listeners",
            "fields": "$:subform.data.fields"
          }
        }
      ]
    }
  ],
  "model": { "text": "" }
}
